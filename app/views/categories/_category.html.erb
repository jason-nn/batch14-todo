<div class="category-container">
  <div class="category-header">
    <div class="category-name">
      <%= category.name %>
    </div>
    <div class="category-header-actions">
      <%= link_to edit_category_path(category) do %>
        <span>􀈊</span>
      <% end %>
      <%= link_to category_path(category),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this category?" } do %>
        <span>􀈑</span>
      <% end %>
    </div>
  </div>
  <div class="new-task-container">
    <%= link_to new_category_task_path(category) do %>
      <div class="white-hover new-task">
        􀅼 New task
      </div>
    <% end %>
  </div>
</div>
